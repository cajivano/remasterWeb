<!-- contenedor cliente -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h3><i class="fas fa-users"></i> C L I E N T E S: </h3>
<div class="alert alert-warning" role="alert">
    Si el cliente esta asociado a un proyecto, no se puede eliminar! Elimine el proyecto primero.
</div>
<div class="table-responsive">
      <table class="table table-sm table-bordered table-hover">
        <thead>
          <tr>
            <td>N°</td>
            <td>N°ID</td>
            <td>NOMBRE(S)</td>
            <td>APELLIDOS</td>
            <td>CELULAR</td>
            <td>OPCIONES</td>
          </tr>
        </thead>
        <tbody>
        
          <% if(data){ %>
            <% for(var i=0; i < data.length; i++){ %>
                <tr>
                    <td><%= (i+1) %></td>
                    <td><%= data[i].id %></td>
                    <td><%= data[i].nombre %></td>
                    <td><%= data[i].apellido %></td>
                    <td><%= data[i].celular %></td>
                    <td>
                        
                        <a href="/update/<%= data[i].id %>" class="btn btn-outline-info btn-sm" ><i class="fas fa-pencil-alt"></i></a>
                        <a href="/delete/<%= data[i].id %>" class="btn btn-outline-dark btn-sm" ><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
 </div>
    </div>
    <div class="col-md-4">
    <a><i class="fas fa-user-edit"></i> Ingrese los datos del cliente: </a>
      <div class="card-body">
        
        <form action="/add" method="post">
          <div class="form-group">
            <input type="text" name="nombre" placeholder="nombre(s)" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="apellido" placeholder="apellidos" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="celular" placeholder="celular" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary btn-block">
            Guardar cliente
          </button>
          <button type="reset" class="btn btn-primary btn-block">
            Limpiar campos
          </button>
          
        </form>
      </div>
    </div>
  </div>
</div>




<div class="container mt-5">
  <div class="row">
<div class="col-md-8">
<h3><i class="fas fa-project-diagram"></i> P R O Y E C T O S: </h3>
    <div class="alert alert-info" role="alert">
    Presione el botón inferior para listar los proyectos.
    </div>    
      
         <form action="/proyectos" method="get">
          <button class="btn btn-primary">
            proyectos creados
          </button>
        </form>       
          
</div>
    <div class="col-md-4">

    
    <a><i class="fas fa-edit"></i> Ingrese un nuevo proyecto: </a>
      <div class="card-body">
        
        <form action="/addproyecto" method="post">
          <div class="form-group">
            <input type="text" name="nombreProyecto" placeholder="nombre de proyecto" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="descripcion" placeholder="descripción breve(máx 50 caract)" class="form-control">
          </div>
          <div class="form-group">
            <select name="cliente_id" class="form-control">
            <option value="null">Seleccione un Cliente:</option>
            <% if(data){ %>            
            <% for(var i=0; i < data.length; i++){ %>
            <option value="<%= data[i].id %>"><%= data[i].nombre %></option>
            <% } %>
            <% } %>
            </select>
          </div>

          <button type="submit" class="btn btn-primary btn-block">
            Guardar Proyecto
          </button>
          <button type="reset" class="btn btn-primary btn-block">
            Limpiar campos
          </button>
          
        </form>
      </div>
    </div>
  </div>
</div>



</body>
<footer class="page-footer  font-small bg-primary">

  
  <div class="footer-copyright text-center py-4">© 2020 Copyright:
    <a> R E M A S T E R</a>
  </div>


</footer>
</html>


